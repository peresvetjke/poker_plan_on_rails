<%= turbo_stream_from "#{dom_id(@round)}_tasks" %>

<%= link_to sanitize("&larr; Back to rounds"), rounds_path %>

<div class="header">
  <h1>
    <%= @round.title %>
  </h1>
  <%= link_to "New task",
            new_round_task_path(@round),
            data: { turbo_frame: "new_task" } %>
</div>

<ul>
  <% @round.users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>

<%= turbo_frame_tag Task.new %>
<%= turbo_frame_tag "#{dom_id(@round)}_tasks" do %>
  <%= render @round.tasks %>
<% end %>
