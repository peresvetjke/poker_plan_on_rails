<%= turbo_frame_tag round do %>
  <div class="round">
    <%= link_to round.title,
                round_path(round),
                data: { turbo_frame: "_top" } %>
    <div class="round__actions">
      <%= button_to "Delete",
                    round_path(round),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_round_path(round),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>
