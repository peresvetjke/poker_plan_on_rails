<%= simple_form_for round, html: { class: "round form" } do |f| %>
  <% if round.errors.any? %>
    <div class="error-message">
      <%= round.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :title, input_html: { autofocus: true } %>
  <%= link_to "Cancel", rounds_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
