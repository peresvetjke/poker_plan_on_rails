<%# locals: (round_user:, user:, user_voted:) -%>

<div id="<%= dom_id(round_user) %>">
  <div class="round_user columns">
    <p class="column">
      <%= "#{user.username}"%>
    </p>

    <div class="column is-2">
      <div class="round_user--status">
        <% if user.is_moderator %>
          <%= render partial: "layouts/icon", locals: { type: :eye, alt: "Moderator" } %>
        <% else %>
          <% if user_voted %>
            <%= render partial: "layouts/icon", locals: { type: :check, alt: "Ready" } %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="column is-2">
      <%= button_to round_user_path(round_user), method: :delete, data: {turbo_confirm: "Are you sure?"} do %>
        <%= render partial: "layouts/icon", locals: { type: :delete, alt: "Delete" } %>
      <% end %>
    </div>
  </div>
</div>
